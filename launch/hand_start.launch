<launch>
  
  <arg name="ws_name"             default="seher_ws"/>
  <arg name="serial_no_camera1"    			default="937622073146"/>
  <arg name="camera1"              			default="cam1"/>

  <arg name="serial_no_camera2"    			default="838212073332"/>
  <arg name="camera2"              			default="cam2"/>


  
  
  
  <!-- launch the robot in gazebo -->

  <include file="$(find ur5e_egp50_moveit_config)/launch/gazebo.launch" />

  <include file="$(find ur5e_egp50_moveit_config)/launch/ur5e_egp50_moveit_planning_execution.launch">
	  <arg name="sim" value="true"/>
  </include>


  
  <include file="$(find realsense2_camera)/launch/rs_camera.launch" >
    <arg name="camera" value="$(arg camera1)"/>
    <arg name="serial_no" value="$(arg serial_no_camera1)"/>

    <arg name="align_depth" value="true" />
    <arg name="filters" value="pointcloud" />

  </include>

  <include file="$(find seher)/launch/hand_run.launch">
     
     <arg name="ws_name" value="$(arg ws_name)"/>
     <arg name="camera2" value="$(arg camera2)"/>
     <arg name="serial_no_camera2" value="$(arg serial_no_camera2)"/>
     
   </include>

  <node name="tf_base_link" pkg="tf" type="static_transform_publisher" output="screen" args="0 0 0 0 0 0 world base_link 50"/>
  <node name="tf_cam2_color_optical_frame" pkg="tf" type="static_transform_publisher" output="screen" args="0.25 1 0 0 0 -1.5 world cam2_color_optical_frame 50"/>
  <node name="tf_cam1_color_optical_frame" pkg="tf" type="static_transform_publisher" output="screen" args="-0.4 -0.006250 0.05 0 0 0 cam2_color_optical_frame cam1_color_optical_frame 50"/>

      <!-- invoke rviz -->
  <node pkg="rviz" type="rviz" respawn="false" required="true" name="rviz" args="-d $(find seher)/config/robot_tracking.rviz"/>

  <node pkg="seher" name="movein_goal" type="go_up.py" output="screen"></node>
    

  <include file="$(find ur_manipulation)/launch/seher_demo.launch">
	  <arg name="prompts" value="false"/>
  </include>

  
</launch>